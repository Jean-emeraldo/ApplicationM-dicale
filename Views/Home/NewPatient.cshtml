@model ApplicationMedicale.Models.NewPatient
@{
    Layout = null;
}
@if (ViewBag.ErrorMessage != null)
{
    <p class="text-danger">@ViewBag.ErrorMessage</p>
}
<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>MediCare - Connexion</title>
    <link rel="stylesheet" href="~/css/NewPatient.css" asp-append-version="true" />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <script src="~/js/NewPatient.js" asp-append-version="true"></script>
</head>
<body>
    <header class="header">
        <div class="header-container">
            <a href="@Url.Action("Index", "Home")" class="logo">
                <i class="fas fa-heartbeat"></i>
                <span>MediCare</span>
            </a>
        </div>
    </header>
    <main class="main-container">
        <div class="auth-container">
            <div id="loginForm" class="auth-form visible">
                <div class="auth-header">
                    <h1>Connexion</h1>
                    <p>Accédez à votre compte MediCare</p>
                </div>
                @if (ViewBag.ErrorMessage != null)
                {
                    <div class="error-message text-danger">@(ViewBag.ErrorMessage)</div>
                }
                <form asp-action="NewPatient" method="post">
                    <label asp-for="User">Nom d'utilisateur</label>
                    <input asp-for="User" class="form-control" required />
                    <span asp-validation-for="User" class="text-danger"></span>
                    <label asp-for="Password">Mot de passe</label>
                    <input asp-for="Password" class="form-control" type="password" required />
                    <span asp-validation-for="Password" class="text-danger"></span>
                    <button type="submit" class="btn btn-primary">Se connecter</button>
                </form>
                <p>Nouveau sur MediCare ? <a href="@Url.Action("SignUp", "Home")">Créer un compte</a></p>
            </div>
        </div>
    </main>
    <footer>
        <div class="footer-text">&copy; @DateTime.Now.Year MediCare. Tous droits réservés.</div>
    </footer>
</body>
</html>
