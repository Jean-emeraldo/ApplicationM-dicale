@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>MediCare - Connexion</title>
    <link rel="stylesheet" href="../css/NewPatient.css" asp-append-version="true" />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <script src="~/js/NewPatient.js" asp-append-version="true"></script>
</head>
<body>
    <header class="header">
        <div class="header-container">
            <a href="@Url.Action("Index", "Home")" class="logo">
                <i class="fas fa-heartbeat"></i>
                <span>MediCare</span>
            </a>
        </div>
    </header>

    <main class="main-container">
        <div class="auth-container">
            <div id="loginForm" class="auth-form visible">
                <div class="auth-header">
                    <h1><i class="fas fa-sign-in-alt"></i> Connexion</h1>
                    <p>Accédez à votre compte MediCare</p>
                </div>

                <form id="loginFormAction" action="@Url.Action("NewPatient", "Home")" method="post" autocomplete="on">
                    <div class="form-group">
                        <label for="loginEmail" class="form-label">
                            <i class="fas fa-envelope"></i> Adresse Email
                        </label>
                        <input type="email" id="loginEmail" name="Email" class="form-control" required autocomplete="email">
                        <div class="error-message" id="loginEmail-error">Veuillez saisir une adresse email valide</div>
                    </div>

                    <div class="form-group">
                        <label for="loginPassword" class="form-label">
                            <i class="fas fa-lock"></i> Mot de passe
                        </label>
                        <div class="password-container">
                            <input type="password" id="loginPassword" name="Password" class="form-control" required autocomplete="current-password">
                            <i class="fas fa-eye toggle-password" id="toggleLoginPassword"></i>
                        </div>
                        <div class="error-message" id="loginPassword-error">Veuillez saisir votre mot de passe</div>
                    </div>

                    <button type="submit" class="btn">
                        <i class="fas fa-sign-in-alt"></i> Se connecter
                    </button>

                    <div class="switch-link">
                        <span>Nouveau sur MediCare? <a href="@Url.Action("SignUp", "Home")">Créer un compte</a></span>
                    </div>
                </form>
            </div>

            <div id="signupForm" class="auth-form">
                <div class="auth-header">
                    <h1><i class="fas fa-user-plus"></i> Inscription</h1>
                    <p>Créez votre compte MediCare</p>
                </div>

                <form id="signupFormAction">
                    <input id="signupFullName" type="text" placeholder="Nom complet">
                    <div id="signupFullName-error" class="error-message"></div>

                    <input id="signupEmail" type="email" placeholder="Email">
                    <div id="signupEmail-error" class="error-message"></div>

                    <input id="signupPassword" type="password" placeholder="Mot de passe">
                    <i id="toggleSignupPassword" class="fa fa-eye"></i>
                    <div id="signupPassword-error" class="error-message"></div>

                    <input id="signupConfirmPassword" type="password" placeholder="Confirmer le mot de passe">
                    <i id="toggleSignupConfirmPassword" class="fa fa-eye"></i>
                    <div id="signupConfirmPassword-error" class="error-message"></div>

                    <button type="submit">S'inscrire</button>
                </form>
            </div>
        </div>
    </main>

    <footer>
        <div class="footer-text">&copy; @DateTime.Now.Year MediCare. Tous droits réservés.</div>
    </footer>

    </body>
</html>
