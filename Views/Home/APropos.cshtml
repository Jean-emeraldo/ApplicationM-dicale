@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>À propos - MediCare</title>
    <link rel="stylesheet" href="../css/APropos.css" asp-append-version="true" />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <script src="../js/APropos.js" asp-append-version="true"></script>
</head>
<body>
    <!-- Header -->
    <header class="main-header">
        <div class="container header-container">
            <a href="@Url.Action("Index", "Home")" class="logo">
                <i class="fas fa-heartbeat"></i>
                <span>MediCare</span>
            </a>
            <div class="header-actions">
                <a href="@Url.Action("NewPatient", "Home")" class="btn">Connexion</a>
            </div>
        </div>
    </header>

    <!-- Navigation -->
    <nav class="main-nav">
        <div class="container">
            <ul class="nav-list">
                <li><a href="@Url.Action("Index", "Home")" class="nav-link"><i class="fas fa-home"></i> Accueil</a></li>
                <li><a href="@Url.Action("RendezVous", "Home")" class="nav-link"><i class="fas fa-concierge-bell"></i> Services</a></li>
                <li><a href="@Url.Action("Index", "Home")" class="nav-link"><i class="fas fa-envelope"></i> Contact</a></li>
                <li><a href="@Url.Action("APropos", "Home")" class="nav-link active"><i class="fas fa-info-circle"></i> À propos</a></li>
            </ul>
        </div>
    </nav>

    <!-- Hero Section -->
    <section class="hero">
        <div class="container hero-content">
            <h1>À propos de MediCare</h1>
            <p>Votre santé, notre priorité absolue</p>
            <img src="../images/e.jpeg" alt="Équipe MediCare" class="hero-image">
        </div>
    </section>

    <!-- Mission Section -->
    <section class="section mission">
        <div class="container">
            <div class="section-title">
                <h2>Notre Mission</h2>
            </div>
            <p>
                MediCare est une application médicale complète conçue pour révolutionner la gestion des soins de santé. 
                Notre plateforme intuitive et sécurisée connecte patients, médecins et établissements de santé dans un 
                écosystème harmonieux et efficace.
            </p>
            <div class="gallery">
                <img src="../images/g.jpeg" alt="Interface MediCare" class="gallery-image">
                <img src="../images/d.jpeg" alt="Fonctionnalités MediCare" class="gallery-image">
                <img src="../images/h.jpeg" alt="Sécurité MediCare" class="gallery-image">
            </div>
        </div>
    </section>

    <!-- Features Section -->
    <section class="section features">
        <div class="container">
            <div class="section-title">
                <h2>Pourquoi nous choisir ?</h2>
            </div>
            <div class="features-grid">
                <div class="feature-card">
                    <div class="feature-icon"><i class="fas fa-user-md"></i></div>
                    <h3>Pour les Professionnels</h3>
                    <p>
                        Une interface pensée par des médecins pour des médecins, optimisant chaque étape 
                        de votre pratique médicale au quotidien.
                    </p>
                </div>
                <div class="feature-card">
                    <div class="feature-icon"><i class="fas fa-shield-alt"></i></div>
                    <h3>Sécurité Maximale</h3>
                    <p>
                        Cryptage AES-256 et conformité RGPD pour protéger vos données sensibles selon 
                        les standards les plus stricts.
                    </p>
                </div>
                <div class="feature-card">
                    <div class="feature-icon"><i class="fas fa-rocket"></i></div>
                    <h3>Innovation Continue</h3>
                    <p>
                        Mises à jour régulières intégrant les dernières avancées technologiques 
                        pour une expérience toujours optimale.
                    </p>
                </div>
            </div>
        </div>
    </section>

    <!-- Footer -->
    <footer class="main-footer">
        <div class="container">
            <div class="footer-grid">
                <div class="footer-column">
                    <h3>À propos</h3>
                    <p>
                        MediCare est une plateforme innovante dédiée à transformer l'expérience des soins de santé 
                        grâce à la technologie.
                    </p>
                </div>
                <div class="footer-column">
                    <h3>Liens rapides</h3>
                    <ul class="footer-links">
                        <li><a href="@Url.Action("Index", "Home")"><i class="fas fa-chevron-right"></i> Accueil</a></li>
                        <li><a href="@Url.Action("Services", "Home")"><i class="fas fa-chevron-right"></i> Services</a></li>
                        <li><a href="@Url.Action("Contact", "Home")"><i class="fas fa-chevron-right"></i> Contact</a></li>
                    </ul>
                </div>
                <div class="footer-column">
                    <h3>Réseaux sociaux</h3>
                    <div class="social-links">
                        <a href="#" class="social-link"><i class="fab fa-facebook-f"></i></a>
                        <a href="#" class="social-link"><i class="fab fa-twitter"></i></a>
                        <a href="#" class="social-link"><i class="fab fa-linkedin-in"></i></a>
                    </div>
                </div>
            </div>
            <div class="copyright">
                &copy; <span id="year"></span> MediCare. Tous droits réservés.
            </div>
        </div>
    </footer>


</body>
</html>