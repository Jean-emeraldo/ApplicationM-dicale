@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>MediCare - Nouvelle Prescription</title>
    <link rel="stylesheet" href="../css/Prescription.css" asp-append-version="true" />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <script src="../js/Prescription.js" asp-append-version="true"></script>
</head>
<body>
    <header class="header">
        <div class="header-container">
            <a href="@Url.Action("Index", "Home")" class="logo">
                <i class="fas fa-heartbeat"></i>
                <span>MediCare</span>
            </a>
        </div>
    </header>
    
    <main class="main-container">
        <div class="page-header">
            <i class="fas fa-prescription-bottle-alt page-icon"></i>
            <h1 class="page-title">Nouvelle Prescription Médicale</h1>
        </div>
        
        <div class="form-container">
            <div class="form-header">
                <h2><i class="fas fa-file-medical"></i> Formulaire de Prescription</h2>
                <p>Remplissez les détails de la prescription médicamenteuse</p>
            </div>
            
            <form action="/prescriptions" method="post" autocomplete="on">
                <div class="form-group">
                    <label for="id" class="form-label">
                        <i class="fas fa-id-card"></i> ID de la Prescription
                    </label>
                    <input type="number" id="id" name="Id" class="form-control" required autocomplete="off">
                    <small class="form-text">Numéro unique identifiant la prescription</small>
                </div>
                
                <div class="form-group autocomplete">
                    <label for="medicament" class="form-label">
                        <i class="fas fa-pills"></i> Médicament
                    </label>
                    <input type="text" id="medicament" name="Medicament" class="form-control" required autocomplete="on">
                    <small class="form-text">Nom commercial du médicament</small>
                </div>
                
                <div class="form-group">
                    <label for="posologie" class="form-label">
                        <i class="fas fa-prescription"></i> Posologie
                    </label>
                    <textarea id="posologie" name="Posologie" class="form-control" rows="3" required></textarea>
                    <small class="form-text">Dose, fréquence et durée du traitement</small>
                </div>
                
                <div class="form-group">
                    <label for="patientId" class="form-label">
                        <i class="fas fa-user-injured"></i> ID Patient
                    </label>
                    <input type="number" id="patientId" name="PatientId" class="form-control" required>
                    <small class="form-text">Identifiant du patient dans le système</small>
                </div>
                
                <div class="form-group">
                    <label for="medecinId" class="form-label">
                        <i class="fas fa-user-md"></i> ID Médecin Prescripteur
                    </label>
                    <input type="number" id="medecinId" name="MedecinId" class="form-control" required>
                    <small class="form-text">Identifiant du médecin prescripteur</small>
                </div>
                
                <div class="form-group">
                    <label for="datePrescription" class="form-label">
                        <i class="far fa-calendar-alt"></i> Date de Prescription
                    </label>
                    <input type="date" id="datePrescription" name="DatePrescription" class="form-control" required>
                </div>
                
                <button type="submit" class="btn">
                    <i class="fas fa-save"></i> Enregistrer la Prescription
                </button>
                
                <a href="@Url.Action("Prescription", "Home")" class="back-link">
                    <i class="fas fa-arrow-left"></i> Retour à la liste des prescriptions
                </a>
            </form>
        </div>
    </main>
    
    <footer>
        <div class="footer-container">
            <p class="footer-text">&copy; @DateTime.Now.Year MediCare. Tous droits réservés.</p>
        </div>
    </footer>

   
</body>
</html>