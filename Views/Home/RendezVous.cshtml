@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>MediCare - Ajouter un Rendez-Vous</title>
    <link rel="stylesheet" href="../css/RendezVous.css" asp-append-version="true" />
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">

</head>
<body>
    <header class="header">
        <div class="header-container">
            <a href="@Url.Action("Index", "Home")" class="logo">
                <i class="fas fa-heartbeat"></i>
                <span>MediCare</span>
            </a>
        </div>
    </header>
    
    <main class="main-container">
        <div class="page-title">
            <i class="fas fa-calendar-plus"></i>
            <h1>Nouveau Rendez-Vous Médical</h1>
        </div>
        
        <div class="form-container">
            <form action="/rendezvous" method="post">
                <div class="form-group">
                    <label for="id"><i class="fas fa-id-card"></i> ID du Rendez-Vous</label>
                    <input type="number" id="id" name="Id" class="form-control" required>
                </div>
                
                <div class="form-group">
                    <label for="dateRendezVous"><i class="far fa-calendar-alt"></i> Date et Heure</label>
                    <input type="datetime-local" id="dateRendezVous" name="DateRendezVous" class="form-control" required>
                </div>
                
                <div class="form-group">
                    <label for="patientId"><i class="fas fa-user-injured"></i> ID Patient</label>
                    <input type="number" id="patientId" name="PatientId" class="form-control" required>
                    <small class="text-muted">Vous pouvez trouver l'ID dans la liste des patients</small>
                </div>
                
                <div class="form-group">
                    <label for="medecinId"><i class="fas fa-user-md"></i> ID Médecin</label>
                    <input type="number" id="medecinId" name="MedecinId" class="form-control" required>
                    <small class="text-muted">Consultez l'annuaire des médecins pour l'ID</small>
                </div>
                
                <div class="form-group">
                    <label for="statut"><i class="fas fa-info-circle"></i> Statut</label>
                    <select id="statut" name="Statut" class="form-control" required>
                        <option value="">Sélectionnez un statut</option>
                        <option value="Confirmé">Confirmé</option>
                        <option value="En attente">En attente</option>
                        <option value="Annulé">Annulé</option>
                        <option value="Terminé">Terminé</option>
                    </select>
                </div>
                
                <button type="submit" class="btn">
                    <i class="fas fa-calendar-check"></i> Planifier le Rendez-Vous
                </button>
                
                <a href="@Url.Action("RendezVous", "Home")" class="back-link">
                    <i class="fas fa-arrow-left"></i> Retour à la liste des rendez-vous
                </a>
            </form>
        </div>
    </main>
    
    <footer>
        <div class="footer-container">
            <p class="footer-text">&copy; @DateTime.Now.Year MediCare. Tous droits réservés.</p>
        </div>
    </footer>
</body>
</html>