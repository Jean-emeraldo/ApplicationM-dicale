@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>MediCare - Nouveau Médecin</title>
    <link rel="stylesheet" href="../css/Medecien.css" asp-append-version="true" />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <script src="~/js/Medecien.js" asp-append-version="true"></script>
</head>
<body>
    <header class="header">
        <div class="header-container">
            <a href="@Url.Action("Index", "Home")" class="logo">
                <i class="fas fa-heartbeat"></i>
                <span>MediCare</span>
            </a>
        </div>
    </header>
    
    <main class="main-container">
        <div class="page-header">
            <i class="fas fa-user-md page-icon"></i>
            <h1 class="page-title">Nouveau Médecin</h1>
        </div>
        
        <div class="form-container">
            <div class="form-header">
                <h2><i class="fas fa-user-plus"></i> Enregistrement d'un Médecin</h2>
                <p>Veuillez remplir toutes les informations requises pour le nouveau médecin</p>
            </div>
            
            <form id="medecinForm" action="/medecins" method="post" autocomplete="on" novalidate>
                <div class="form-group">
                    <label for="id" class="form-label">
                        <i class="fas fa-id-card"></i> ID Médecin
                    </label>
                    <input type="number" id="id" name="Id" class="form-control" required>
                    <small class="form-text">Numéro unique d'identification</small>
                    <div class="error-message" id="id-error">Veuillez saisir un ID valide</div>
                </div>
                
                <div class="form-row">
                    <div class="form-group">
                        <label for="nom" class="form-label">
                            <i class="fas fa-user"></i> Nom
                        </label>
                        <input type="text" id="nom" name="Nom" class="form-control" required autocomplete="family-name">
                        <div class="error-message" id="nom-error">Veuillez saisir le nom du médecin</div>
                    </div>
                    
                    <div class="form-group">
                        <label for="prenom" class="form-label">
                            <i class="fas fa-user"></i> Prénom
                        </label>
                        <input type="text" id="prenom" name="Prenom" class="form-control" required autocomplete="given-name">
                        <div class="error-message" id="prenom-error">Veuillez saisir le prénom du médecin</div>
                    </div>
                </div>
                
                <div class="form-group">
                    <label for="specialite" class="form-label">
                        <i class="fas fa-stethoscope"></i> Spécialité
                    </label>
                    <select id="specialite" name="Specialite" class="form-control" required>
                        <option value="">Sélectionnez une spécialité...</option>
                        <option value="Cardiologie">Cardiologie</option>
                        <option value="Dermatologie">Dermatologie</option>
                        <option value="Généraliste">Médecine Générale</option>
                        <option value="Pédiatrie">Pédiatrie</option>
                        <option value="Radiologie">Radiologie</option>
                        <option value="Chirurgie">Chirurgie</option>
                        <option value="Neurologie">Neurologie</option>
                        <option value="Ophtalmologie">Ophtalmologie</option>
                        <option value="ORL">Oto-Rhino-Laryngologie (ORL)</option>
                        <option value="Autre">Autre spécialité</option>
                    </select>
                    <div class="error-message" id="specialite-error">Veuillez sélectionner une spécialité</div>
                </div>
                
                <div class="form-group">
                    <label for="numeroRPPS" class="form-label">
                        <i class="fas fa-id-badge"></i> Numéro RPPS
                    </label>
                    <input type="text" id="numeroRPPS" name="NumeroRPPS" class="form-control" required pattern="[0-9]{11}" title="11 chiffres requis">
                    <small class="form-text">Numéro à 11 chiffres du Répertoire Partagé des Professionnels de Santé</small>
                    <div class="error-message" id="numeroRPPS-error">Veuillez saisir un numéro RPPS valide (11 chiffres)</div>
                </div>
                
                <div class="form-group">
                    <label for="email" class="form-label">
                        <i class="fas fa-envelope"></i> Email Professionnel
                    </label>
                    <input type="email" id="email" name="Email" class="form-control" required autocomplete="email">
                    <div class="error-message" id="email-error">Veuillez saisir un email professionnel valide</div>
                </div>
                
                <div class="form-group">
                    <label for="telephone" class="form-label">
                        <i class="fas fa-phone"></i> Téléphone
                    </label>
                    <input type="tel" id="telephone" name="Telephone" class="form-control" required autocomplete="tel" pattern="[0-9]{10}">
                    <small class="form-text">Format : 0612345678 (10 chiffres sans espace)</small>
                    <div class="error-message" id="telephone-error">Veuillez saisir un numéro de téléphone valide</div>
                </div>
                
                <button type="submit" class="btn">
                    <i class="fas fa-save"></i> Enregistrer le Médecin
                </button>
                
                <a href="@Url.Action("Medecin", "Home")" class="back-link">
                    <i class="fas fa-arrow-left"></i> Retour à la liste des médecins
                </a>
            </form>
        </div>
    </main>
    
    <footer>
        <div class="footer-container">
            <p class="footer-text">&copy; @DateTime.Now.Year MediCare. Tous droits réservés.</p>
        </div>
    </footer>

   
</body>
</html>